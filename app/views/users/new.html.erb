<%= form_with model: @user do |form| %>
<div class="container">
  <h1 class="text-center">Add User</h1>
  <div class="row">  
    <div class="col-4">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %> 
      <%= custom_error(@user, :name) %>
    </div>
  </div><br/>

  <div class="row">
    <div class="col-4">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
      <%= custom_error(@user, :email) %>
    </div>
  </div> <br/>

  <div class="row">
    <div class="col-4">
      <%= form.label :contact %>
      <%= form.text_field :contact, class: "form-control" %> 
      <%= custom_error(@user, :contact) %>
    </div>
  </div> <br/>

  <div class="row">
    <div class="col-4">
      <%= form.label :avatar %>
      <%= form.file_field :avatar, direct_upload: true, class: "form-control" %>
      <%= custom_error(@user, :avatar) %><br>
    </div>
  </div> <br/>

  <div>
    <%= form.submit "Insert data", class: "btn btn-primary" %>
  </div>
    
</div>

<% end %>